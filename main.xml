<theme>
	<formatVersion>7</formatVersion>

	<include subset="shader" name="None"/>
	<include subset="shader" name="ScanLines">./main/scanlines.xml</include>
	<include subset="shader" name="Crt">./main/crt.xml</include>

	<view name="screen">
		<text name="clock">
			<color>FFFFFF</color>
			<fontSize>0.035</fontSize>
			<pos>0.94 0.945</pos>
			<size>0.05 0.058</size>
			<verticalAlignment>center</verticalAlignment>
		</text>

		<controllerActivity name="controllerActivity">
			<pos>0.925 0.96</pos>
			<size>0.095 0.03</size>
			<!--<horizontalAlignment>left</horizontalAlignment>-->
			<itemSpacing>0</itemSpacing>
			<imagePath>./main/gamepad.svg</imagePath>
			<color>FFFFFFFF</color>
			<activityColor>FF9900</activityColor>
			<hotkeyColor>0764A1</hotkeyColor>
		</controllerActivity>
	</view>

	<view name="menu">

		<menuText name="menutitle">
			<fontPath>./main/fonts/Exo2-BoldCondensed.otf</fontPath>
			<fontSize>0.042</fontSize>
			<color>FFFFFF</color>
		</menuText>

		<menuText name="menufooter">
			<fontPath>./main/fonts/Exo2-BoldCondensed.otf</fontPath>
			<fontSize>0.020</fontSize>
			<color>AAAAAA</color>
		</menuText>

		<menuText name="menutext">
			<fontPath>./main/fonts/Exo2-RegularCondensed.otf</fontPath>
			<fontSize>0.036</fontSize>
			<color>EEEEEE</color>
			<separatorColor>FEFEFE</separatorColor>
			<selectorColor>ff9900</selectorColor>
			<selectorColorEnd>DD7700</selectorColorEnd>
			<selectedColor>262626</selectedColor>
			<selectorGradientType>vertical</selectorGradientType>
		</menuText>

		<menuTextSmall name="menutextsmall">
			<fontPath>./main/fonts/Exo2-RegularCondensed.otf</fontPath>
			<fontSize>0.032</fontSize>
		</menuTextSmall>

		<menuBackground name="menubg">
			<color>0764A1</color>
			<cornerSize>32 32</cornerSize>
 			<path>./main/frame.png</path>
		</menuBackground>

		<menuIcons name="menuicons">
			<iconKodi>./main/icons/Kodi.png</iconKodi>
			<iconSystem>./main/icons/System.png</iconSystem>
			<iconUpdates>./main/icons/Updates.png</iconUpdates>
			<iconGames>./main/icons/Games.png</iconGames>
			<iconControllers>./main/icons/Controllers.png</iconControllers>
			<iconUI>./main/icons/UI.png</iconUI>
			<iconSound>./main/icons/Sound.png</iconSound>
			<iconNetwork>./main/icons/Network.png</iconNetwork>
			<iconScraper>./main/icons/Scraper.png</iconScraper>
			<iconAdvanced>./main/icons/Advanced.png</iconAdvanced>
			<iconQuit>./main/icons/Quit.png</iconQuit>
			<iconRestart>./main/icons/Restart.png</iconRestart>
			<iconShutdown>./main/icons/Shutdown.png</iconShutdown>
			<iconFastShutdown>./main/icons/Fastshutdown.png</iconFastShutdown>
			<iconRetroachievements>./main/icons/Contest.png</iconRetroachievements>
		</menuIcons>

		<menuTextEdit name="menutextedit">
			<inactive>./main/textinput_ninepatch.png</inactive>
			<active>./main/textinput_ninepatch_active.png</active>
		</menuTextEdit>
	</view>


	<view name="system">
		<!--
		<sound name="directory">
			<path>./music</path>
		</sound>
		-->

		<carousel name="systemcarousel">
			<color>DDEEFFFF</color>
			<colorEnd>FFFFFFDE</colorEnd>
			<systemInfoDelay>500</systemInfoDelay>
		</carousel>

		<text name="systemInfo">
			<pos>0 0.615</pos>
			<size>1 0.045</size>
			<backgroundColor>0764A1AA</backgroundColor>
			<color>FFFFFFFF</color>
			<glowColor>000000FF</glowColor>
			<glowSize>1</glowSize>
			<reflexion>0.1 0.1</reflexion>
		</text>

		<image name="carousel-shadow" extra="true">
			<path>./main/shadow.png</path>
			<color>FFFFFF88</color>
			<pos>0 0.6162</pos>
			<origin>0 0</origin>
			<size>1 0.055</size>
			<zIndex>11</zIndex>
		</image>

		<image name="background" extra="true">
			<tile>false</tile>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./main/background.svg</path>
		</image>

		<helpsystem name="help">
			<fontSize>0.03</fontSize>
			<pos>0.01 0.965</pos>
			<textColor>ececec</textColor>
			<iconColor>ff9900</iconColor>
		</helpsystem>

		<image name="band1" extra="true">
			<size>0.03 1</size>
			<pos>0.80 0</pos>
			<origin>0 0</origin>
			<path>./main/band.png</path>
		</image>

		<image name="band2" extra="true">
			<size>0.03 1</size>
			<pos>0.829 0</pos>
			<origin>0 0</origin>
			<path>./main/band.png</path>
		</image>

		<image name="band3" extra="true">
			<size>0.03 1</size>
			<pos>0.858 0</pos>
			<origin>0 0</origin>
			<path>./main/band.png</path>
		</image>

		<image name="band4" extra="true">
			<size>0.03 1</size>
			<pos>0.887 0</pos>
			<origin>0 0</origin>
			<path>./main/band.png</path>
		</image>

		<text name="info1, info2, info3, info4, info5, info6, info7, info8, info9, info10, info11, info12" extra="true">
			<color>ff9900</color>
			<alignment>left</alignment>
			<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
			<fontSize>0.017</fontSize>
                        <forceUppercase>1</forceUppercase>
			<size>0.5 0.04</size>
		</text>

		<text name="logoText">
			<color>262626</color>
		</text>

		<image name="footer" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.05</size>
			<path>./main/footer.png</path>
		</image>
	
	</view>

	<view name="basic, detailed, video">

		<image name="background" extra="true">
			<pos>0 0</pos>
			<size>1 1</size>
		</image>	

		<image name="back-logo" extra="true">
			<pos>0.01 0.02</pos>
			<size>0.35 0.15</size>
			<path>./main/header.png</path>
		</image>

		<image name="logo">
			<pos>0.18 0.095</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.3 0.12</maxSize>
		</image>

		<helpsystem name="help">
			<fontSize>0.03</fontSize>
			<pos>0.01 0.965</pos>
			<textColor>ececec</textColor>
			<iconColor>ff9900</iconColor>
		</helpsystem>

		<image name="footer" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.05</size>
			<path>./main/footer.png</path>
		</image>
	</view>

	<view name="basic">
		<image name="back-gamelist" extra="true">
			<pos>0.01 0.19</pos>
			<size>0.35 0.735</size>
			<path>./main/back.png</path>
		</image>

		<textlist name="gamelist">
			<pos>0.015 0.20</pos>
			<size>0.34 0.710</size>
			<selectorColor>ff9900</selectorColor> <!-- Selection bar -->
			<selectorColorEnd>DD7700</selectorColorEnd>
			<selectedColor>262626</selectedColor> <!-- Selection letters -->
			<selectorGradientType>vertical</selectorGradientType>
			<primaryColor>ffffff</primaryColor> <!-- Letters -->
			<secondaryColor>9F9F9F</secondaryColor>
			<fontPath>./main/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<scrollSound>./main/sound/scroll.wav</scrollSound>
		</textlist>
	</view>

	<view name="detailed, video">
		<text name="md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
			<alignment>left</alignment>
			<fontPath>./main/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.11 0.03</size>
		</text>

		<text name="md_releasedate, md_developer, md_publisher, md_genre, md_players, md_lastplayed, md_playcount, md_favorite">
			<alignment>left</alignment>
			<fontPath>./main/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.12 0.02</size>
		</text>

		<image name="back-gamelist" extra="true">
			<pos>0.01 0.19</pos>
			<size>0.35 0.735</size>
			<path>./main/back.png</path>
		</image>

		<textlist name="gamelist">
			<pos>0.015 0.20</pos>
			<size>0.34 0.710</size>
			<selectorColor>ff9900</selectorColor> <!-- Selection bar -->
			<selectorColorEnd>DD7700</selectorColorEnd>
			<selectedColor>262626</selectedColor> <!-- Selection letters -->
			<selectorGradientType>vertical</selectorGradientType>
			<primaryColor>ffffff</primaryColor> <!-- Letters -->
			<secondaryColor>9F9F9F</secondaryColor>
			<fontPath>./main/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<scrollSound>./main/sound/scroll.wav</scrollSound>
		</textlist>

		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite, md_description">
			<color>ececec</color>
		</text>

		<text name="md_releasedate, md_lastplayed, md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite">
			<color>ff9900</color>
		</text>

		<image name="back-image" extra="true">
			<pos>0.37 0.05</pos>
			<size>0.36 0.55</size>
			<path>./main/back.png</path>
		</image>

		<text name="md_lbl_rating">
			<pos>0.76 0.49</pos>
			<forceUppercase>1</forceUppercase>
			<fontPath>./main/fonts/ubuntu_medium.ttf</fontPath>
			<fontSize>0.018</fontSize>
			<size>0.15 0.02</size>
		</text>

		<rating name="md_rating">
			<pos>0.76 0.520</pos>
			<size>0.05 0.06</size>
			<filledPath>./main/rating_filled.svg</filledPath>
			<unfilledPath>./main/rating_empty.svg</unfilledPath>
		</rating>

		<image name="back-information" extra="true">
			<pos>0.74 0.05</pos>
			<size>0.25 0.55</size>
			<path>./main/back.png</path>
		</image>

		<text name="md_lbl_releasedate">
			<forceUppercase>1</forceUppercase>
			<pos>0.76 0.1</pos>
		</text>

		<datetime name="md_releasedate">
			<forceUppercase>1</forceUppercase>
			<pos>0.865 0.105</pos>
		</datetime>

		<text name="md_lbl_developer">
			<pos>0.76 0.16</pos>
		</text>

		<text name="md_developer">
			<pos>0.865 0.165</pos>
		</text>

		<text name="md_lbl_publisher">
			<pos>0.76 0.20</pos>
		</text>

		<text name="md_publisher">
			<pos>0.865 0.205</pos>
		</text>

		<text name="md_lbl_genre">
			<pos>0.76 0.24</pos>
		</text>

		<text name="md_genre">
			<pos>0.865 0.245</pos>
		</text>

		<text name="md_lbl_players">
			<pos>0.76 0.28</pos>
		</text>

		<text name="md_players">
			<pos>0.865 0.285</pos>
		</text>

		<text name="md_lbl_lastplayed">
			<pos>0.76 0.34</pos>
		</text>

		<datetime name="md_lastplayed">
			<pos>0.865 0.345</pos>
		</datetime>

		<text name="md_lbl_playcount">
			<pos>0.76 0.38</pos>
		</text>

		<text name="md_playcount">
			<pos>0.865 0.385</pos>
		</text>

		<text name="md_lbl_favorite">
			<pos>0.76 0.42</pos>
		</text>

		<text name="md_favorite">
			<pos>0.865 0.425</pos>
		</text>

		<image name="back-description" extra="true">
			<pos>0.37 0.62</pos>
			<size>0.62 0.280</size>
			<path>./main/back.png</path>
		</image>

		<text name="md_description">
			<pos>0.39 0.652</pos>
			<size>0.57 0.20</size>
			<lineSpacing>1.5</lineSpacing>
			<fontSize>0.023</fontSize>
			<fontPath>./main/fonts/ubuntu_medium.ttf</fontPath>
		</text>
	</view>

	<view name="detailed">
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.55 0.33</pos>
			<maxSize>0.33 0.454</maxSize>
		</image>
	</view>

	<view name="video">
		<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.55 0.33</pos>
			<maxSize>0.33 0.454</maxSize>
			<delay>0.2</delay>
                        <default></default>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
		</video>
	</view>

</theme>
